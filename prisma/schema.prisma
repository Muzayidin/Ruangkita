generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model AdminUser {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model products {
  id            String   @id @default(uuid())
  slug          String   @unique
  name          String
  price         Int
  category      String?
  description   String?
  imageUrl      String?
  stock         Int?
  featured      Int?
  soldCount     Int?     @default(0)
  createdAt     DateTime @default(now())
  originalPrice Int?
  items       OrderItem[]
}

model Article {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(true)
}

model Order {
  id           String      @id @default(uuid())
  customerName String
  email        String?
  whatsapp     String
  address      String?
  total        Int
  status       String      @default("pending") // pending, paid, shipped, completed, cancelled
  
  // New tracking fields based on Google Sheet
  productionStatus String? // "Proses", "Terkirim", "Selesai" (Global status)
  
  // Component statuses
  carvingStatus String? // "Proses", "Selesai"
  chairStatus   String? // "Proses", "Selesai"
  tableStatus   String? // "Proses", "Selesai"
  baseStatus    String? // "Proses", "Selesai" (Dulangan)
  
  deliveryDate DateTime?
  notes        String?

  items        OrderItem[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   products @relation(fields: [productId], references: [id])
  quantity  Int
  price     Int
}
